<Window x:Class="World_Scene_Maker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:World_Scene_Maker"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">
    <Grid x:Name="grdMain">
        <ScrollViewer x:Name="scvHierarchy" Background="Blue" Margin="0,0,0,0" Width="350" Height="250" HorizontalAlignment="Right" VerticalAlignment="Top" VerticalScrollBarVisibility="Auto">
            
        </ScrollViewer>
        <ScrollViewer x:Name="scvEditor" Background="Yellow" Margin="0,250,0,0" Width="350" HorizontalAlignment="Right" VerticalScrollBarVisibility="Auto">
            
        </ScrollViewer>
    </Grid>
</Window>
